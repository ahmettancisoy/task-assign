<%- include("partials/header") %>
<h4><%= result %></h4>

<% data.forEach(d => { %>
  <div class="p-4 bg-light mt-5 container">
    <h4 class="mt-4"><%= d.dev %></h4>
    <div class="row row-cols-3">
      <% d.data.forEach((weeks, index) => { %>
        <div class="col">
          <div class="rounded p-3 mt-5 bg-white">
            <h5 class="text-center mb-4">Week <%= weeks.week %></h5>
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Provider</th>
                  <th>Task</th>
                  <th>Level</th>
                  <th>Duration</th>
                </tr>
              </thead>
              <tbody>
                <% weeks.tasks.forEach(task => { %>
                  <tr>
                    <td><%= task.provider %></td>
                    <td><%= task.name %></td>
                    <td><%= task.level %></td>
                    <td><%= task.estimated_duration %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
            <p>Weekly Duration Total: <%= weeks.totalHours %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
<% }); %>

<%- include("partials/footer") %>